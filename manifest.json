{
    "name": "Stop Wasting Time",
    "version": "1.0",
    "description": "Stop wasting time, focus on your goals and your future",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo-16.png",
            "32": "images/logo-32.png",
            "48": "images/logo-48.png",
            "128": "images/logo-128.png"
        }
    },
    "icons": {
        "16": "images/logo-16.png",
        "32": "images/logo-32.png",
        "48": "images/logo-48.png",
        "128": "images/logo-128.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}